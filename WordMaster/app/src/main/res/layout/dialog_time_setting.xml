<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_marginVertical="8dp"
        android:text="시작시간 설정"/>

    <DatePicker
        android:id="@+id/dp_time_setting_date_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:calendarViewShown="false"
        style="@style/MyDatePicker"
        android:visibility="visible"
        android:datePickerMode="spinner"/>
    <TimePicker
        android:id="@+id/tp_time_setting_time_picker"
        android:layout_width="match_parent"
        android:numbersInnerTextColor="#000"
        android:numbersTextColor="#000"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:timePickerMode="spinner"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_time_previous"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:layout_height="wrap_content"
            android:text="이전"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_time_next"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:layout_height="wrap_content"
            android:text="다음"/>

    </LinearLayout>


</LinearLayout>